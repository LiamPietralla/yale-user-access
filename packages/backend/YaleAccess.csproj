    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>83aa9238-2d6b-483c-b60d-886f32d17532</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
